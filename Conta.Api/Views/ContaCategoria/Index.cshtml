@model IEnumerable<Conta.Core.Aggregates.ContaCategoria.ContaCategoria>

@{
    ViewData["Title"] = "Categorias de Conta";
}

<h1>Categorias de Conta</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Categoria</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Nome</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>

